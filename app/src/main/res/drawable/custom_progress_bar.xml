<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Фон прогресс-бара -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="@color/progress_background" /> <!-- Цвет фона -->
        </shape>
    </item>

    <!-- Прогресс -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <solid android:color="@color/progress_color" /> <!-- Цвет заполнения -->
            </shape>
        </clip>
    </item>
</layer-list>